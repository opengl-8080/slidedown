<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="195.0" prefWidth="394.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gl8080.slidedown.controller.EditorSettingsController">
   <center>
      <GridPane prefHeight="92.0" prefWidth="394.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Font Family" />
            <Label text="Font Size" GridPane.rowIndex="1" />
            <TextField fx:id="fontSizeTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ComboBox fx:id="fontFamilyComboBox" GridPane.columnIndex="1" />
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </GridPane>
   </center>
   <bottom>
    <HBox alignment="BOTTOM_RIGHT" maxHeight="-Infinity" maxWidth="+Infinity" minHeight="-Infinity" minWidth="-Infinity" BorderPane.alignment="CENTER">
      <children>
      <Button fx:id="okButton" mnemonicParsing="false" onAction="#onOkAction" prefHeight="23.0" prefWidth="80.0" text="OK" HBox.hgrow="NEVER">
        <HBox.margin>
          <Insets right="14.0" />
        </HBox.margin>
      </Button>
      <Button fx:id="applyButton" mnemonicParsing="false" onAction="#onApplyAction" prefHeight="23.0" prefWidth="80.0" text="Apply" HBox.hgrow="NEVER">
        <HBox.margin>
          <Insets right="14.0" />
        </HBox.margin>
      </Button>
        <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" onAction="#onCancelAction" prefHeight="23.0" prefWidth="60.0" text="Cancel" HBox.hgrow="NEVER">
          <HBox.margin>
            <Insets />
          </HBox.margin>
        </Button>
      </children>
         <padding>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </padding>
    </HBox>
   </bottom>
</BorderPane>
